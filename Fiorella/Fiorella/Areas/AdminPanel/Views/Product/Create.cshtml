@model Product

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="row">
  <div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Default form</h4>
        <p class="card-description"> Basic form layout </p>
        <form class="forms-sample" method="post">
          <div class="form-group">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" class="form-control" placeholder="Product Name">
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Price">Product Price</label>
            <input asp-for="Price" class="form-control" placeholder="Product Price">
            <span asp-validation-for="Price" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="CategoryId">Product Category</label>
            <input asp-for="CategoryId" class="form-control" placeholder="Product Category">
            <span asp-validation-for="CategoryId" class="text-danger"></span>
          </div>
          <button type="submit" class="btn btn-primary mr-2" asp-controller="Product" asp-action="Create">Create</button>
          <a class="btn btn-light" asp-controller="Product" asp-action="Index">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>