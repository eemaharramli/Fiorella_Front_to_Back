@model Product

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}


<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"> @Model.Name </h4>
          <table class="table table-striped">
            <thead>
            <tr>
              <th> Product Image </th>
              <th> Product Name </th>
              <th> Product Price </th>
              <th>category</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td class="py-1">
                <img src="~/img/@Model.Image" alt="image" />
              </td>
              <td> @Model.Name </td>
              <td> $ @Model.Price </td>
              <td> @Model.Category.Name </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>