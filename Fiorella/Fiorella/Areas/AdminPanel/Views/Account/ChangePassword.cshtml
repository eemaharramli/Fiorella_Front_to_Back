@model ChangePassword
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Change Password</h4>
      <div class="text-danger" asp-validation-summary=ModelOnly></div>
      <form class="pt-3" method="post">
        <div class="form-group">
          <label asp-for="Username">Username</label>
          <input class="form-control form-control-lg" asp-for="Username" placeholder="Username">
          <span class="text-danger" asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
          <label asp-for="OldPassword">OldPassword</label>
          <input class="form-control form-control-lg" asp-for="OldPassword" placeholder="Password">
          <span class="text-danger" asp-validation-for="OldPassword"></span>
        </div>
        <div class="form-group">
          <label asp-for="NewPassword">NewPassword</label>
          <input class="form-control form-control-lg" asp-for="NewPassword" placeholder="NewPassword">
          <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
          <label asp-for="ConfirmNewPassword">ConfirmNewPassword</label>
          <input class="form-control form-control-lg" asp-for="ConfirmNewPassword" placeholder="ConfirmNewPassword">
          <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
        </div>
        <div class="mt-3">
          <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Change Password</button>
        </div>
      </form>
