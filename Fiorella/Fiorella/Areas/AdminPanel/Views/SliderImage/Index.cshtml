@model List<SliderImage>

@{
    ViewBag.Title = "Slider Images";
    Layout = "_AdminLayout";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Slider Images</h4>
                        <table class="table table-dark">
                            <thead>
                            <tr>
                                <th> Slider Image </th>
                                <th> Actions </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@item.SliderImageName" alt="@item.SliderImageName" style="width: 150px; height: 150px; border-radius: 100%">
                                    </td>
                                    <td>
                                        <a class="btn btn-primary"> Update </a>
                                        <a class="btn btn-danger" asp-controller="SliderImage" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                                    </td>
                                </tr>
                            }
                            <a class="btn btn-success" asp-controller="SliderImage" asp-action="Create"> Add Image </a>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
