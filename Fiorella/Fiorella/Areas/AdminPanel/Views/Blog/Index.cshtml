@model List<Blog>
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}


<div class="main-panel">
    <div class="row">
      <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Blog List</h4>
            <table class="table table-hover">
              <thead>
              <tr>
                <th>Blog Title</th>
                <th>Blog Date</th>
                <th>Blog Image</th>
                <th>Actions</th>
              </tr>
              </thead>
              <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td>@item.Title</td>
                  <td>@item.Date</td>
                  <td><img src="~/img/@item.Image" alt=""></td>
                  <td>
                    <a class="btn btn-warning" asp-controller="Blog" asp-action="Details" asp-route-id="@item.id">Detail</a>
                    <a class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              }
              <a class="btn btn-success" asp-controller="Blog" asp-action="Create" >Create new Blog</a>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</div>


