@model Blog

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Title">Blog Title</label>
                        <input class="form-control" asp-for="Title" placeholder="Blog Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Info">Blog Info</label>
                        <input class="form-control" asp-for="Info" placeholder="Blog Info">
                        <span asp-validation-for="Info" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date">Blog date</label>
                        <input class="form-control" asp-for="Date" placeholder="Blog Info">
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a class="btn btn-light" asp-controller="Blog" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>