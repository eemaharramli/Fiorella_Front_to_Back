@model Expert

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description"> Basic form layout </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Fullname">Expert Full Name</label>
                        <input asp-for="Fullname" class="form-control" placeholder="Expert Full Name">
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input class="form-control" asp-for="Photo" accept="image/*">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpertJob">Expert Job</label>
                        <input asp-for="ExpertJob" class="form-control" placeholder="Expert Job">
                        <span asp-validation-for="ExpertJob" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2" asp-controller="Expert" asp-action="Create">Create</button>
                    <a class="btn btn-light" asp-controller="Expert" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>