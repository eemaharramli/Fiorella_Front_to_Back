@model List<Fiorella.Models.Expert>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!-- EXPERTS START -->

<section id="experts">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>Flower Experts</h1>
                    <p class="text-black-50">A perfect blend of creativity, energy, communication, happiness and
                        love. Let us arrange
                        a smile for you.</p>
                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="item text-center">
                        <div class="img">
                            <img src="~/img/@item.Image" class="img-fluid rounded-circle" alt="">
                        </div>
                        <div class="text mt-3">
                            <h6>@item.Fullname</h6>
                            <p class="text-black-50">@item.ExpertJob.Name</p>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</section>

<!-- EXPERTS END -->