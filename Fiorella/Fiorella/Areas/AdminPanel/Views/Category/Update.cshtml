@model Category
@{
    ViewBag.Title = "Update";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Category</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Name">Category name</label>
                        <input class="form-control" asp-for="Name" placeholder="Category Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Category Description</label>
                        <input class="form-control" asp-for="Description" placeholder="Category Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a class="btn btn-light" asp-controller="Category" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>