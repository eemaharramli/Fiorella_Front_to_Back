@model Expert

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="main-panel">
    <div class="content-wrapper">
      <div class="col-lg-12 stretch-card grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">@Model.Fullname Info</h4>
            <table class="table table-bordered">
              <thead>
              <tr>
                <th> Expert Name </th>
                <th> Expert Job </th>
                <th> Expert Image </th>
              </tr>
              </thead>
              <tbody>
              <tr class="table-info">
                <td> @Model.Fullname </td>
                <td> @Html.Raw(Model.ExpertJob.Name) </td>
                <td> <img src="~/img/@Model.Image" alt="@Model.Image"> </td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</div>