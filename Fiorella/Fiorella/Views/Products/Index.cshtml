@model List<Fiorella.Models.Product>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section id="products" style="min-height: 70vh">
    <div class="container">
        <div class="row" id="productRow">
            <input type="hidden" value="@ViewBag.ProductsCount" id="productsCount">
            @await Component.InvokeAsync("Product", 4)
        </div>
    </div>
    <div class="d-flex justify-content-center" id="loadMoreAnim">
        <div class="spinner-grow" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-grow" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-grow" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
</section>