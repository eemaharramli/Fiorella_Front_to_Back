@model Blog

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">  </h4>
          <table class="table table-striped">
            <thead>
            <tr>
              <th> Blog Image </th>
              <th> Blog Title </th>
              <th> Blog Info </th>
              <th> Blog Date </th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td class="py-1">
                <img src="~/img/@Model.Image" alt="image" />
              </td>
              <td> @Model.Title </td>
              <td> @Model.Info </td>
              <td> @Model.Date.ToString("yyyy-M-d dddd") </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
